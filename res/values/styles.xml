<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="title_bar">
		<item name="android:background">@drawable/my_bg_for_title</item>
		<item name="android:minHeight">48dp</item>
	</style>
	
    <!-- 
    	list_item_*
    		如果*采用for+单词，那就用在ListView中， 其余的用在LinearLayout中
     -->
    <style name="list_item_01">
		<!-- <item name="android:background">@drawable/ic_right_back</item> -->
		<item name="android:minHeight">48dp</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginRight">8dp</item>
	</style>
	<style name="list_item_for_city">
		<!-- <item name="android:background">@drawable/ic_right_back</item> -->
		<item name="android:minHeight">48dp</item>
	</style>
	
	<style name="in_table_row">
		<item name="android:minHeight">32dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="in_table_dividing_line">
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@drawable/ic_line</item>
	</style>
	<style name="in_table_col_1">
	    <item name="android:layout_marginLeft">5dp</item>
		<item name="android:textColor">#ff949494</item>
	</style>
	<style name="in_table_col_2">
		<item name="android:textColor">@color/color_black</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="in_table_col_3">
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>
	
	
	
	<style name="text_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style1">
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style2">
        <item name="android:textColor">#9D9D9D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_row">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
	
</resources>